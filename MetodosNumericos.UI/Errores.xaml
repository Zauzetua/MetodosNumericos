<Window x:Class="MetodosNumericos.UI.Errores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetodosNumericos.UI"
        mc:Ignorable="d"
        Title="Errores" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblReal" Content="Ingrese el valor real:" HorizontalAlignment="Left" Margin="107,51,0,0" VerticalAlignment="Top" Width="222" FontFamily="Arial" FontSize="20"/>
        <Label x:Name="lblAproximado" Content="Ingrese el valor obtenido:" HorizontalAlignment="Left" Margin="107,0,0,0" VerticalAlignment="Center" Width="254" FontFamily="Arial" FontSize="20" RenderTransformOrigin="-0.292,0.734"/>
        <Label x:Name="lblErrorAbs" Content="El error absoluto es de:" HorizontalAlignment="Left" Margin="531,51,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"/>
        <Label x:Name="lblErrorRel" Content="El error relativo es de:" HorizontalAlignment="Left" Margin="531,0,0,0" VerticalAlignment="Center" FontFamily="Arial" FontSize="20" RenderTransformOrigin="0.192,0.679"/>
        <TextBox x:Name="txtReal" HorizontalAlignment="Left" Margin="107,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" FontFamily="Arial" FontSize="20" Height="36"/>
        <TextBox x:Name="txtAprox" HorizontalAlignment="Left" Margin="107,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" FontFamily="Arial" FontSize="20" Height="36"/>
        <TextBox x:Name="txtAbs" HorizontalAlignment="Left" Margin="531,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" FontFamily="Arial" FontSize="20" Height="36" IsEnabled="False"/>
        <TextBox x:Name="txtRel" HorizontalAlignment="Left" Margin="531,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" FontFamily="Arial" FontSize="20" Height="36" IsEnabled="False"/>
        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="161,336,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"/>
        <Button x:Name="btnReset" Content="Reiniciar" HorizontalAlignment="Left" Margin="585,336,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"/>
        <Separator HorizontalAlignment="Center" VerticalAlignment="Center" Height="422" Width="434" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>

    </Grid>
</Window>
