<Window x:Class="MetodosNumericos.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <DockPanel>
        <!-- Menú en la parte superior -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Vistas">
                <MenuItem Header="Tabulacion" Click="MenuItem_Tabulacion_Click"/>
                <MenuItem Header="Errores" Click="MenuItem_OtraVista_Click"/>
            </MenuItem>
        </Menu>

        <!-- Contenedor para cambiar vistas -->
        <ContentControl x:Name="MainContent"/>
    </DockPanel>
</Window>
