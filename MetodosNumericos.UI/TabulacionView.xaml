<UserControl x:Class="MetodosNumericos.UI.TabulacionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FAFAFA" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo: entradas -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top">
            <TextBlock Text="Ingrese xi:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtXi" Width="180" Margin="0,2,0,0"/>

            <TextBlock Text="Ingrese xf:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtXf" Width="180" Margin="0,2,0,0"/>

            <TextBlock Text="Incremento (Δx):" FontWeight="SemiBold"/>
            <TextBox x:Name="txtIncx" Width="180" Margin="0,2,0,0"/>

            <TextBlock Text="Seleccione una función:" FontWeight="SemiBold"/>
            <ComboBox x:Name="cbxFuncion" Width="220" Margin="0,2,0,0">
                <ComboBoxItem Content="f(x) = 4x³ - 6x² + 7x - 2.3"/>
                <ComboBoxItem Content="g(x) = x²√|cos(x)| - 5"/>
            </ComboBox>

            <Button x:Name="btnTabular" Content="Tabular"
                    Width="180" Height="45"
                    Margin="0,15,0,0"
                    FontSize="16"
                    Background="#1976D2" Foreground="White"
                    BorderThickness="0"
                    Click="btnTabular_Click"/>
        </StackPanel>

        <!-- Panel derecho: resultados -->
        <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
            <TextBlock Text="Resultados" FontSize="20" 
                       FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Tabla de resultados -->
            <DataGrid x:Name="dgResultados" 
                      Margin="0,10,0,0"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="X" Binding="{Binding x}" Width="*"/>
                    <DataGridTextColumn Header="Y" Binding="{Binding y}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
